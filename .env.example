# Web3 Monorepo Environment Variables
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_PASSWORD=cryptopass123

# Crypto Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TWITTER_API_KEY=your_twitter_api_key_here

# Social Monitor Configuration
TELEGRAM_API_ID=your_telegram_api_id
TELEGRAM_API_HASH=your_telegram_api_hash
DISCORD_BOT_TOKEN=your_discord_bot_token

# Social Monitor Features (true/false)
TWITTER_ENABLED=true
TELEGRAM_ENABLED=true
DISCORD_ENABLED=true

# Kronos DeFi Configuration
KRONOS_DEVICE=auto  # auto, cpu, cuda
KRONOS_PRED_LEN=12
PREDICTOR_URL=http://localhost:4568

# Trading Configuration
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret
TRADING_MODE=paper  # paper, live

# Monitoring Configuration (Optional)
ENABLE_MONITORING=false
PROMETHEUS_PORT=9090

# Development Configuration
NODE_ENV=development
LOG_LEVEL=info

# Security
JWT_SECRET=your_jwt_secret_here
API_KEY=your_api_key_here

# Network Configuration
CRYPTO_BOT_PORT=8080
SOCIAL_MONITOR_PORT=3002
KRONOS_TRADING_PORT=4567
KRONOS_AI_PORT=4568
DASHBOARD_PORT=3000