# ================================
# 交易所配置
# ================================
# 支持的交易所: BINANCE, OKX, GATE
EXCHANGE_TYPE=GATE

# 交易所 API 凭证
API_KEY=your_exchange_api_key
API_SECRET=your_exchange_api_secret

# ================================
# 交易币种配置
# ================================
# 支持的币种: BTC, ETH, SOL, BNB, XRP, DOGE
TRADING_SYMBOL=BTC

# ================================
# AI 模型配置
# ================================
# DeepSeek API Key（必需）
DEEPSEEK_API_KEY=your_deepseek_api_key

# ================================
# 市场情绪数据配置（可选）
# ================================
# CryptoOracle API Key（可选，提供更准确的市场情绪数据）
# 注册地址: https://cryptoracle.network
# 如果不设置，将使用 Fear & Greed Index 作为备选
CRYPTO_ORACLE_API_KEY=your_crypto_oracle_api_key

# ================================
# 交易配置
# ================================
# 杠杆倍数（默认: 5）
LEVERAGE=5

# 执行间隔（分钟，默认: 15）
INTERVAL_MINUTES=15

# ================================
# 仓位管理配置
# ================================
# 基础投入 USDT 金额（默认: 6）
BASE_USDT=6

# 高信心倍数（默认: 1.5）
HIGH_CONFIDENCE_MULTIPLIER=1.5

# 中等信心倍数（默认: 1.0）
MEDIUM_CONFIDENCE_MULTIPLIER=1.0

# 低信心倍数（默认: 0.5）
LOW_CONFIDENCE_MULTIPLIER=0.5

# 强势趋势倍数（默认: 1.3）
TREND_STRENGTH_MULTIPLIER=1.3

# 最大仓位比例（0.1 = 10%，默认: 0.1）
MAX_POSITION_RATIO=0.1
