# Telegram Bot配置
TELOXIDE_TOKEN=your_telegram_bot_token_here

# Binance API配置
BINANCE_API_KEY=your_binance_api_key
BINANCE_SECRET_KEY=your_binance_secret_key
BINANCE_TESTNET=true  # 测试网模式，生产环境设为false

# 跟单配置
LEADER_API_KEY=leader_binance_api_key  # 带单者API Key（只读）
LEADER_SECRET_KEY=leader_binance_secret_key

# 跟单参数
COPY_RATIO=0.5  # 跟单比例（0.5 = 50%资金跟单）
MAX_POSITION_SIZE=100  # 最大单笔金额 USDT
LEVERAGE=3  # 杠杆倍数

# 数据库
DATABASE_URL=sqlite:./trading.db

# 日志级别
RUST_LOG=info